---
import SiteLayout from '../../layouts/SiteLayout.astro';
import LangSwitch from '../../components/LangSwitch.astro';
import CookieBar from '../../components/CookieBar.astro';
import CookieModal from '../../components/CookieModal.astro';

const currentPath = '/ru/terms';
const locale = 'ru';
---

<SiteLayout title="Пользовательское соглашение - Дмитрий Бонд" locale={locale}>
