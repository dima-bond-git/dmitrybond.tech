---
import HydrogenBase from 'hydrogen/src/layouts/Base.astro';
import Header from "../components/ui/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  locale?: 'en' | 'ru';
  lang?: 'en' | 'ru'; // поддержим старое имя пропа
  active?: 'about' | 'bookme' | 'blog' | 'cv';
}

// Берём из Astro.props оба варианта и нормализуем
const {
  title = 'Dmitry Bondarenko',
  description = '',
  locale: _locale,
  lang: _lang,
  active
} = Astro.props as Props;

const locale = (_locale ?? _lang ?? 'en') as 'en' | 'ru';
---

<HydrogenBase {title} {description}>
  <Header lang={locale} active={active} />
  <slot />
  <Footer />
</HydrogenBase>