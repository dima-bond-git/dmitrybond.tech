# Cal.com Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="postgresql://cal:calpass@postgres:5432/cal"

# NextAuth Configuration
NEXTAUTH_URL="https://dmitrybond.tech"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth (for Google Calendar integration)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration (using mailcow or SES)
EMAIL_FROM="noreply@dmitrybond.tech"
EMAIL_SERVER_HOST="mail.dmitrybond.tech"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="noreply@dmitrybond.tech"
EMAIL_SERVER_PASSWORD="your-email-password"

# Optional: SES Configuration (if using SES as smarthost)
# EMAIL_SERVER_HOST="email-smtp.us-east-1.amazonaws.com"
# EMAIL_SERVER_USER="your-ses-smtp-username"
# EMAIL_SERVER_PASSWORD="your-ses-smtp-password"

# Cal.com Settings
CALCOM_TELEMETRY_DISABLED="1"
NODE_ENV="production"

# Optional: Additional integrations
# ZOOM_CLIENT_ID="your-zoom-client-id"
# ZOOM_CLIENT_SECRET="your-zoom-client-secret"
# MS_GRAPH_CLIENT_ID="your-ms-client-id"
# MS_GRAPH_CLIENT_SECRET="your-ms-client-secret"

